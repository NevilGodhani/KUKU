<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AccountFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="@drawable/background"
        android:padding="16dp">
        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="100dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/logo"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hey!"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/main"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/first_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/main"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/last_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Last Name"
            android:textColor="@color/main"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/email_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user09@gmail.com"
            android:textSize="18sp"
            android:textColor="@color/main"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/phone_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91XX0909XXXX"
            android:textSize="18sp"
            android:textColor="@color/main"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:orientation="vertical"
        android:padding="5dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="20dp"
            android:gravity="center"
            android:id="@+id/address">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:drawableRight="@drawable/baseline_add_location_24"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="20dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:id="@+id/term">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:drawableRight="@drawable/baseline_chrome_reader_mode_24"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="20dp"
            android:gravity="center"
            android:id="@+id/privacy"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:drawableRight="@drawable/baseline_privacy_tip_24"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="20dp"
            android:gravity="center"
            android:id="@+id/edit_a"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit yout details"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:drawableRight="@drawable/baseline_edit_document_24"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="20dp"
            android:gravity="center"
            android:id="@+id/delete_account_a"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete your account"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:drawableRight="@drawable/baseline_delete_24"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>
</LinearLayout>